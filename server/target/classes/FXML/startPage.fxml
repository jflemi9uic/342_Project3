<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" styleClass="general"
    fx:controller="Controller">
   <center>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Enter Port: " />
            <TextField />
            <Button text="Start" fx:id="startButton" onAction="#startServer" />
         </children>
      </HBox>
   </center>
</BorderPane>

    <!-- 
    SERVER GUI
    - choose port to listen to
    - button to turn the server on
    - display state of the gamef
        - how many clients are connected to the server
        - what each player played
        - each player points
        - if someone won
        - is playing again
